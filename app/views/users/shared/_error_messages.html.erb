<% if resource.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h6><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span><%= resource.errors.count %> <%= resource.errors.count > 1 ? "errors" : "error" %> prohibited this information from being saved:
    </h6>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
