<div class="container-fluid single-page-layout" style="<%= @event.session_background? ? "background-image: url(\'#{@event.session_background.url}\')" : "" %>">
    <div class="row register-wrapper align-items-center justify-content-center" >
        <div class="col col-lg-6" style="background: <%= @event.session_background_color %>;">
            <h2>Create Account</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'row text-center justify-content-center'}) do |f| %>
              <%= render "users/shared/error_messages", resource: resource %>
              <div class="row">
                  <div class="col col-lg-12">
                      <label for="full_name">Full Name</label>
                      <%= f.text_field :full_name, class:"form-control"%>
                  </div>
              </div>
              <div class="row">
                  <div class="col col-md-12 col-lg-6">
                      <label for="birthdate">Birth Date</label>
                      <input type="date" class="form-control" placeholder="birthdate" name="user[birthdate]" id="user_birthdate">
                  </div>
                  <div class="col col-md-12 col-lg-6">
                      <label for="email">Email</label>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  </div>
              </div>
              <div class="row">
                  <div class="col col-md-12 col-lg-6">
                      <label for="passowrd">Password</label>
                      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
                  </div>
                  <div class="col col-md-12 col-lg-6">
                      <label for="password_confirmation">Password Confirmation</label>
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
                  </div>
              </div>
              <div class="row">
                  <div class="col col-md-12 col-lg-6">
                      <label for="affiliation">Contact Number</label>
                      <%= f.text_field :contact_number, class: "form-control" %>
                  </div>
                  <div class="col col-md-12 col-lg-6">
                      <label for="affiliation">Affiliation</label>
                      <%= f.text_field :affiliation, class: "form-control" %>
                  </div>
              </div>
              <div class="row">
                <div class="col col-md-12 col-lg-6">
                    <label for="member_type">Member Type</label>
                    <%= f.select :member_type, User::MEMBER_TYPES.invert, {}, { class: 'form-select' } %>
                </div>
                <div class="col col-md-12 col-lg-6">
                    <label for="member_id">Member ID</label>
                    <%= f.text_field :member_id, class: "form-control" %>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col col-md-12 col-lg-8" style="text-align: left;">
                  <%= link_to "Sign in instead", user_session_path(event_code: @event.event_code) %>
                </div>
                <div class="col col-md-12 col-lg-4">
                  <%= f.submit "Sign up", class:"btn btn-sign-up w-100", style: "background: #{@event.session_mouse_out};", onmouseover:"this.style.background='#{@event.session_mouse_over}'", onmouseout:"this.style.background='#{@event.session_mouse_out}'" %>
                </div>
              </div>
            <% end %>
        </div>
        <div class="col col-lg-6 px-5 py-3 img-wrapper">
            <%= image_tag "registration.svg", class:"img-fluid" %>
        </div>
    </div>
</div>
