<div class="mb-3">
  <%= f.text_field :title, class: 'form-control', id: "title", placeholder: "Enter Event Title*" %>
</div>
<div class="mb-3">
  <%= f.text_area :description, rows: '4', class: 'form-control', placeholder:"Event Desctiption" %>
</div>
<div class="mb-3">
  <%= f.text_field :event_code, class: 'form-control', id: "event_code", placeholder: "Enter Event Code*" %>
</div>
<div class="mb-3">
  <div class="row">
    <div class="col col-lg-6">
      <label for="startDate">Start Date</label>
      <%= f.date_field :start_date, class: 'form-control' %>
    </div>
    <div class="col col-lg-6">
      <label for="endDate">End Date</label>
      <%= f.date_field :end_date, class: 'form-control' %>
    </div>
  </div>
</div>
<div class="mb-3">
  <div class="row">
    <div class="col col-lg-6">
      <label for="startTime">Start Time</label>
      <%= f.time_field :start_time, class: 'form-control' %>
    </div>
    <div class="col col-lg-6">
      <label for="endTime">End Time</label>
      <%= f.time_field :end_time, class: 'form-control' %>
    </div>
  </div>
</div>
<div class="mb-3">
  <label class="w-100" for="eventtype">Event Type<span class="required">*</span></label>
  <div class="form-check form-check-inline">
    <%= f.radio_button :event_type, Event::PUBLIC, class: "form-check-input" %>
    <label class="form-check-label" for="public">Public</label>
  </div>
  <div class="form-check form-check-inline">
    <%= f.radio_button :event_type, Event::PRIVATE, class: "form-check-input" %>
    <label class="form-check-label" for="private">Private</label>
  </div>
</div>
<div class="mb-3">
  <label for="streamType">Stream Type<span class="required">*</span></label>
  <div class="row">
    <div class="col col-lg-6">
      <%= f.select :stream_type, Event::STREAM_TYPES.invert, {}, { class: 'form-select', id: 'stream_type' } %>
    </div>
    <div class="col col-lg-6" id="streamValueType">
    </div>
  </div>
</div>
