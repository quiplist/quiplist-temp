<div class="tab-pane fade show" id="nav-feed-backs" role="tabpanel" aria-labelledby="nav-feed-backs-tab">
  <% if (can? :create, FeedBack) %>
    <%= link_to "Add Feed Back", new_event_feed_back_path(event_id: @event.id), class: 'btn btn-blue mt-2' %>
  <% end %>
  <table id="event_list_table" class="table data-table hover">
    <thead>
      <tr>
        <th>Question</th>
        <th>Question Type</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @feed_backs.each do |feed_back| %>
        <tr>
          <td><%= feed_back.question %></td>
          <td><%= feed_back.question_type_name %></td>
          <td class="text-center">
            <% if can? :show, FeedBack %>
              <%= link_to "Show", event_feed_back_path(event_id: @event.id, id: feed_back.id), class: 'btn btn-view' %>
            <% end %>
            <% if can? :update, FeedBack %>
              <%= link_to "Edit", edit_event_feed_back_path(event_id: @event.id, id: feed_back.id), class: 'btn btn-edit' %>
            <% end %>
            <% if (can? :destroy, FeedBack) %>
              <a class="btn btn-remove" href="#" data-bs-toggle="modal" data-bs-target="#delete-modal-id-<%= feed_back.id %>">Delete</a>
              <%= render partial: "layouts/shared/delete_modal", locals: { index_id: "#{feed_back.id}", m_name: "Feed Back", name: feed_back.question, path: event_feed_back_path(event_id: @event.id, id: feed_back.id) } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
