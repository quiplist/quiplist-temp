<!DOCTYPE html>
<html lang="en-us">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>ALS GAME</title>
    <style>
		html,
		body {
			background: #2AC8C8;
			width: 100%;
			height: 100%;
			overflow: visible;
			padding: 0;
			margin: 0;
		}

		div#gameContainer {
			background: transparent !important;
			position: absolute;
		}

		div#gameContainer canvas {
			position: absolute;
		}

		div#gameContainer canvas[data-pixel-art="true"] {
			position: absolute;
			image-rendering: optimizeSpeed;
			image-rendering: -webkit-crisp-edges;
			image-rendering: -moz-crisp-edges;
			image-rendering: -o-crisp-edges;
			image-rendering: crisp-edges;
			image-rendering: -webkit-optimize-contrast;
			image-rendering: optimize-contrast;
			image-rendering: pixelated;
			-ms-interpolation-mode: nearest-neighbor;
		}
	</style>
    <link rel="shortcut icon" href="<%= asset_path '/games/fishing_boat/TemplateData/favicon.ico' %>">
    <link rel="stylesheet" href="<%= asset_path '/games/fishing_boat/TemplateData/style.css' %>">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans" rel="stylesheet">
  </head>
  <body>
    <div id="unity-container" class="unity-desktop">
      <canvas id="unity-canvas"></canvas>
      <div id="unity-loading-bar">
        <div id="company-logo"></div>
        <div id="unity-progress-bar-empty">
          <div id="unity-progress-bar-full"></div>
        </div>
        <div id="unity-progress-text" class="dark">0%</div>
      </div>
    </div>
    <script>
      var buildUrl = "<%= asset_path '/games/fishing_boat/Build' %>";
      var loaderUrl = buildUrl + "/FishingBoat.loader.js";
      var config = {
        dataUrl: buildUrl + "/FishingBoat.data",
        frameworkUrl: buildUrl + "/FishingBoat.framework.js",
        codeUrl: buildUrl + "/FishingBoat.wasm",
        streamingAssetsUrl: "StreamingAssets",
        companyName: "Don Romantiko Games",
        productName: "ALS GAME",
        productVersion: "4",
      };

      var container = document.querySelector("#unity-container");
      var canvas = document.querySelector("#unity-canvas");
      var loadingBar = document.querySelector("#unity-loading-bar");
      var progressBarFull = document.querySelector("#unity-progress-bar-full");
      var progressText = document.querySelector("#unity-progress-text");

      if (/iPhone|iPad|iPod|Android/i.test(navigator.userAgent)) {
        container.className = "unity-mobile";
        config.devicePixelRatio = 1;
      }
      loadingBar.style.display = "block";

      var script = document.createElement("script");
      script.src = loaderUrl;
      script.onload = () => {
        createUnityInstance(canvas, config, (progress) => {
          var displayProgress = (100 * (progress / 0.9));
          if(displayProgress > 100) {
            displayProgress = 100;
          }
          progressBarFull.style.width = displayProgress + "%";
          progressText.innerHTML = Math.round(displayProgress) + "%";
        }).then((unityInstance) => {
          loadingBar.style.display = "none";
                    var canvas = unityInstance.Module.canvas;
				var container = canvas.parentElement;
				function onResize() {
					var w;
					var h;

					if (scaleToFit) {
						w = window.innerWidth;
						h = window.innerHeight;

						var r = 1080 / 1920;

						if (w * r > window.innerHeight) {
							w = Math.min(w, Math.ceil(h / r));
						}
						h = Math.floor(w * r);
					} else {
						w = 1920;
						h = 1080;
					}

					container.style.width = canvas.style.width = w + "px";
					container.style.height = canvas.style.height = h + "px";
					container.style.top = Math.floor((window.innerHeight - h) / 2) + "px";
					container.style.left = Math.floor((window.innerWidth - w) / 2) + "px";
				}

				var scaleToFit;
				try {
					scaleToFit = !!JSON.parse("");
				} catch (e) {
					scaleToFit = true;
				}
				window.addEventListener('resize', onResize);
				onResize();

        unityInstance.SendMessage("game_manager", "ReturnGetUserID", "<%= @current_user.id %>");
				unityInstance.SendMessage("game_manager", "ReturnGetGuestListID", "<%= @guest.id %>");
				unityInstance.SendMessage("game_manager", "ReturnGetEventID", "<%= @event.id %>");
        }).catch((message) => {
          alert(message);
        });
      };
      document.body.appendChild(script);
    </script>
  </body>
</html>
