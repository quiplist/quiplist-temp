<%= form_for application, url: doorkeeper_submit_path(application), as: :doorkeeper_application, html: { role: 'form' } do |f| %>
  <% if application.errors.any? %>
    <div class="alert alert-danger" data-alert><p><%= t('doorkeeper.applications.form.error') %></p></div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-8">
      <div class="mb-3">
        <div class="row">
          <div class="col col-lg-12">
            <label for="adminName">Name<span class="required">*</span></label>
            <%= f.text_field :name, class: "form-control #{ 'is-invalid' if application.errors[:name].present? }", required: true, id: "full_name" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-end">
      <%= f.submit "Submit", class: "btn btn-submit" %>
    </div>
  </div>
<% end %>
