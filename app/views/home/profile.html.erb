<div class="chat-live-wrapper thankyou main-bg">
  <div class="container px-5 py-3">
      <div class="row">
            <div class="col-12">
                <%= form_for @user, as: :user, url: update_profile_path(event_code: @event.event_code), method: :put, html: { class: "row profile-form-wrapper text-start", multipart: true } do |f| %>
                  <%= render partial: "layouts/shared/success_messages", locals: { messages: flash[:notice] } %>
                  <%= render partial: "layouts/shared/error_messages", locals: { messages: @user.errors.full_messages } %>
                  <div class="row px-0">
                    <div class="col">
                      <h4 class="text-start">My Profile</h4>
                      <hr/>
                    </div>
                  </div>
                  <div class="col-12">
                      <label for="full_name">Full Name <span class="required">*</span></label>
                      <%= f.text_field :full_name, autofocus: true, autocomplete: "email", class:"form-control"%>
                  </div>
                  <div class="col-12">
                    <label for="email">Email <span class="required">*</span></label>
                    <%= f.email_field :email, class: "form-control" %>
                  </div>
                  <% if @event.include_affiliation? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Affiliation
                          <% if @event.required_affiliation? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :affiliation, class: "form-control" %>
                    </div>
                  <% end %>
                  <% if @event.include_company? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Company
                          <% if @event.required_company? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :company, class: "form-control" %>
                    </div>
                  <% end %>
                  <% if @event.include_member_company? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Member Company
                          <% if @event.required_member_company? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :member_company, class: "form-control" %>
                    </div>
                  <% end %>

                  <% if @event.include_contact_number? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Contact Number
                          <% if @event.required_contact_number? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :contact_number, class: "form-control" %>
                    </div>
                  <% end %>
                  <% if @event.include_mailing_address? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Mailing Address
                          <% if @event.required_mailing_address? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :mailing_address, class: "form-control" %>
                    </div>
                  <% end %>
                  <% if @event.include_who_invited_you? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Who Invited You?
                          <% if @event.required_who_invited_you? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :who_invited_you, class: "form-control" %>
                    </div>
                  <% end %>
                  <% if @event.include_upline? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Upline
                          <% if @event.required_upline? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :upline, class: "form-control" %>
                    </div>
                  <% end %>

                  <% if @event.include_member_type? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Member Type
                          <% if @event.required_member_type? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <% if @event.with_guest_member_type %>
                          <%= f.select :member_type, User::MEMBER_TYPES_WITH_GUEST.invert, {}, { class: 'form-select' } %>
                        <% else %>
                          <%= f.select :member_type, User::MEMBER_TYPES.invert, {}, { class: 'form-select' } %>
                        <% end %>
                    </div>
                  <% end %>
                  <% if @event.include_member_id? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Member Id
                          <% if @event.required_member_id? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :member_id, class: "form-control" %>
                    </div>
                  <% end %>
                  <% if @event.include_abo_type? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          ABO Type
                          <% if @event.required_abo_type? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <% if @event.with_guest_abo_type %>
                          <%= f.select :abo_type, User::ABO_TYPES_WITH_GUEST.invert, {}, { class: 'form-select' } %>
                        <% else %>
                          <%= f.select :abo_type, User::ABO_TYPES.invert, {}, { class: 'form-select' } %>
                        <% end %>
                    </div>
                  <% end %>
                  <% if @event.include_abo_number? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          ABO Number
                          <% if @event.required_abo_number? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :abo_number, class: "form-control" %>
                    </div>
                  <% end %>
                  <% if @event.include_aes_number? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          AES Number
                          <% if @event.required_aes_number? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :aes_number, class: "form-control" %>
                    </div>
                  <% end %>
                  <% if @event.include_distributor_type? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Distributor Type
                          <% if @event.required_distributor_type? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <% if @event.with_guest_distributor_type %>
                          <%= f.select :distributor_type, User::DISTRIBUTOR_TYPES_WTIH_GUEST.invert, {}, { class: 'form-select' } %>
                        <% else %>
                          <%= f.select :distributor_type, User::DISTRIBUTOR_TYPES.invert, {}, { class: 'form-select' } %>
                        <% end %>
                    </div>
                  <% end %>
                  <% if @event.include_distributor_number? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Distributor Number
                          <% if @event.required_distributor_number? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :distributor_number, class: "form-control" %>
                    </div>
                  <% end %>
                  <% if @event.include_employee_number? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Employee Number
                          <% if @event.required_employee_number? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :employee_number, class: "form-control" %>
                    </div>
                  <% end %>
                  <% if @event.include_id_number? %>
                    <div class="col-12 col-md-6">
                        <label for="email">
                          Id Number
                          <% if @event.required_id_number? %>
                            <span class="required">*</span>
                          <% end %>
                        </label>
                        <%= f.text_field :id_number, class: "form-control" %>
                    </div>
                  <% end %>
                  <div class="py-3 text-center">
                      <%= submit_tag "Save", class: "btn btn-blue px-5" %>
                  </div>
                <% end %>
            </div>
      </div>
  </div>
</div>
