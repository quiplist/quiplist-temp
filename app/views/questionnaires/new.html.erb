<div class="container content-wrapper">
  <div class="row mb-3">
    <div class="col-12 text-start">
      <h2 class="event_title">Create Questionnaire</h2>
    </div>
    <hr/>
  </div>
    <%= form_for @questionnaire, as: :questionnaire, url: event_questionnaires_path(event_id: @event.id, id: @questionnaire.id), method: :post, html: { class: "" } do |f| %>
      <%= render partial: "layouts/shared/success_messages", locals: { messages: flash[:notice] } %>
      <%= render partial: "layouts/shared/error_messages", locals: { messages: @questionnaire.errors.full_messages } %>
      <%= render partial: "questionnaires/shared/form", locals: {f: f} %>
      <div class="row">
        <div class="col-12 text-end">
          <%= submit_tag "Create Questionnaire", class: "btn btn-submit" %>
        </div>
      </div>
    <% end %>
</div>
