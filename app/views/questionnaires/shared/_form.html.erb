<div class="row">
  <div class="col-12 col-lg-2">
      <h4>Details</h4>
  </div>
  <div class="col-12 col-lg-10">
    <div class="mb-3">
      <div class="row">
        <div class="col col-lg-6">
          <label for="questionnaireType">Questionnaire Type</label>
          <%= f.select :questionnaire_type, Questionnaire::QUESTIONNAIRE_TYPES.invert, {}, { class: 'form-select', id: 'raffle_choices' } %>
        </div>
        <div class="col col-lg-6">
          <label for="question">Question</label>
          <%= f.text_field :question, class: 'form-control', placeholder: "Question" %>
        </div>
      </div>
    </div>
    
    <div class="questionnaire-wrapper">
      <div class="multiple-choice-wrapper">
        <div class="col-12 col-lg-2">
            <label for="choices">Choices</label>
        </div>
        <div class="mb-3">
          <div class="row">
            <div class="col col-lg-6">
              <%= f.text_field :choices, multiple: true, class: 'form-control', placeholder: "A" %>
            </div>
            <div class="col col-lg-6">
              <%= f.text_field :choices, multiple: true, class: 'form-control', placeholder: "B" %>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <div class="row">
            <div class="col col-lg-6">
              <%= f.text_field :choices, multiple: true, class: 'form-control', placeholder: "C" %>
            </div>
            <div class="col col-lg-6">
              <%= f.text_field :choices, multiple: true, class: 'form-control', placeholder: "D" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
