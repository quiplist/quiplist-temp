<%= render partial: "layouts/shared/breadcrumbs", locals: {
  links: [
    { path: events_path, path_name: "Event" },
    { path: event_path(@event), path_name: "#{@event.id}" }
  ],
  current_path: "New Raffle"
} %>

<div class="container content-wrapper">
  <div class="row mb-3">
    <div class="col-12 text-start">
      <h2 class="event_title">Create Raffle</h2>
    </div>
    <hr/>
  </div>
    <%= form_for @raffle, as: :raffle, url: event_raffles_path(event_id: @event.id, id: @raffle.id), method: :post, html: { class: "" } do |f| %>
      <%= render partial: "layouts/shared/success_messages", locals: { messages: flash[:notice] } %>
      <%= render partial: "layouts/shared/error_messages", locals: { messages: @raffle.errors.full_messages } %>
      <%= render partial: "raffles/shared/form", locals: {f: f} %>
      <div class="row">
        <div class="col-12 text-end">
          <%= submit_tag "Create Raffle", class: "btn btn-submit" %>
        </div>
      </div>
    <% end %>
</div>