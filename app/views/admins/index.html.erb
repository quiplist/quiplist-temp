<div class="container content-wrapper">
  <%= render partial: "layouts/shared/success_messages", locals: { messages: flash[:notice] } %>
  <%= render partial: "layouts/shared/alert_messages", locals: { messages: flash[:alert] } %>
  <div class="row text-end mb-3">
    <div class="col col-lg-12">
      <button type="button" class="btn btn-edit btn-blue" data-bs-toggle="modal" data-bs-target="#createAdmin" id="0">
      Create Admin
      </button>
      <div class="modal fade" id="createAdmin" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createAdminLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="createAdminLabel">Create Admin</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="container">
                <div class="row">
                  <div class="col col-lg-12">
                    <%= form_for @admin, as: :admin, url: admins_path(@admin), method: :post, html: { class: "text-start" } do |f| %>
                      <%= render partial: "layouts/shared/error_messages", locals: { messages: @admin.errors.full_messages } %>
                      <%= render partial: "admins/shared/form", locals: {f: f, id: "0", e: @admin, with_password: true} %>
                      <div class="row justify-content-end mr-0">
                        <div class="col text-right">
                          <%= submit_tag "Create Admin", class: "btn btn-submit w-100" %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col col-lg-12">
      <table id="admin_list" class="table">
        <thead>
          <tr>
            <th>Full Name</th>
            <th>Email Address</th>
            <th>Role</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.full_name %></td>
              <td><%= admin.email %></td>
              <td><%= Admin::ROLE_TYPES[admin.role] %></td>
              <td class="actions">
                <%= link_to "Show", admin_path(admin), class: 'btn btn-view' %>
                <button class="btn btn-edit" id="<%= admin.id %>" data-bs-toggle="modal" data-bs-target="#editAdmin-<%= admin.id %>">Edit</button>
                <a class="btn btn-remove" href="#" data-bs-toggle="modal" data-bs-target="#delete-modal-id-<%= admin.id %>">Delete</a>
                <%= render partial: "layouts/shared/delete_modal", locals: { index_id: "#{admin.id}", m_name: "Admin", name: admin.full_name, path: admin_path(admin) } %>
              </td>
            </tr>
            <div class="modal fade" id="editAdmin-<%= admin.id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="editSingleAdmin" aria-hidden="true">
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="editSingleAdmin">Edit <%= admin.full_name %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="container">
                      <div class="row">
                        <div class="col col-lg-12">
                          <%= form_for admin, as: :admin, url: admin_path(admin), method: :put, html: { class: "create-event_form text-start", multipart: true } do |f| %>
                            <%= render partial: "layouts/shared/error_messages", locals: { messages: admin.errors.full_messages } %>
                            <%= render partial: "admins/shared/form", locals: {f: f, id: admin.id, e: admin, with_password: false} %>
                            <div class="row justify-content-end mr-0">
                              <div class="col text-right">
                                <%= submit_tag "Edit Admin", class: "btn btn-blue btn-edit-submit w-100" %>
                              </div>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to_previous_page @admins, '<< previous ' %>
<%= page_entries_info @admins %>
<%= link_to_next_page @admins, ' next >>' %>
