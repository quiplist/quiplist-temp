<div class="container content-wrapper">
    <div class="row text-end mb-3">
    <div class="col col-lg-12">
        <div class="heading-wrapper">
            <h4 class="text-start">My Profile</h4>
            <hr/>
        </div>
        <%= form_for @admin, as: :admin, url: profile_admins_path, method: :put, html: { class: "profile-form-wrapper text-start", multipart: true } do |f| %>
          <%= render partial: "layouts/shared/success_messages", locals: { messages: flash[:notice] } %>
          <%= render partial: "layouts/shared/error_messages", locals: { messages: @admin.errors.full_messages } %>
          <div class="mb-3 px-0">
              <label for="name">Name</label>
              <%= f.text_field :full_name, class: 'form-control', id: "full_name" %>
          </div>
          <div class="mb-3 px-0">
              <label for="email">Email Address</label>
              <%= f.email_field :email, class: 'form-control', id: "email" %>
          </div>
          <div class="mb-3 px-0">
              <label for="adminMemberType">Company</label>
              <%= f.text_field :company, class: "form-control" %>
          </div>
          <div class="mb-3 px-0">
              <label for="adminMemberID">Position</label>
              <%= f.text_field :position, class: "form-control" %>
          </div>
          <div class="mb-3 px-0">
              <label for="affiliation">Contact Number</label>
              <%= f.text_field :contact_number, class: "form-control" %>
          </div>
          <div class="mb-3 px-0 text-center">
            <%= link_to "CLICK HERE TO CHANGE PASSWORD", edit_admin_registration_path, class: "password__label" %>
          </div>

          <div class="py-3 text-center">
              <%= submit_tag "Save", class: "btn btn-blue px-5" %>
          </div>
        <% end %>
    </div>
    </div>
</div>
