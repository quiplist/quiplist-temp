<div class="container content-wrapper">
   <div class="row text-end mb-3">
      <div class="col col-lg-12">
         <div class="heading-wrapper">
            <h4 class="text-start">Forgot password</h4>
            <hr/>
         </div>
         <% if notice %>
           <p class="alert alert-success"><%= notice %></p>
         <% end %>
         <% if alert %>
           <p class="alert alert-danger"><%= alert %></p>
         <% end %>
         <%= form_for @admin, as: :admin, url: admin_reset_password_path, method: :post, html: { class: "" } do |f| %>
          <%= render partial: "layouts/shared/error_messages", locals: { messages: @admin.errors.full_messages } %>
          <div class="mb-3 px-0">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
          <div class="actions text-center">
              <%= f.submit "Update", class: "btn btn-blue" %>
          </div>
         <% end %>
      </div>
   </div>
</div>
