<div class="chat-live-wrapper thankyou" style="">
  <div class="container px-5 py-3">
      <div class="row">
            <div class="col-12">
               <%= form_for @admin, as: :admin, url: admin_reset_password_path, method: :post, html: { class: "row password-form-wrapper text-start" } do |f| %>
               <%= render partial: "layouts/shared/error_messages", locals: { messages: @admin.errors.full_messages } %>
                  <% if notice %>
                     <p class="alert alert-success"><%= notice %></p>
                  <% end %>
                  <% if alert %>
                     <p class="alert alert-danger"><%= alert %></p>
                  <% end %>
                  <div class="row px-0">
                    <div class="col">
                      <h4 class="text-start">Forgot Password?</h4>
                      <hr/>
                    </div>
                  </div>
                  <div class="mb-3 px-0">
                     <%= f.label :email %><br />
                     <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
                  </div>
                  <div class="actions text-center">
                     <%= f.submit "Update", class: "btn btn-blue" %>
                  </div>
                  <% end %>
            </div>
      </div>
  </div>
</div>