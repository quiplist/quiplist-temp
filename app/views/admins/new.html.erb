<div class="container content-wrapper">
  <div class="row mb-3">
    <div class="col-12 text-start">
      <h4>Details</h4>
    </div>
    <hr/>
  </div>
    <%= form_for @admin, as: :admin, url: admins_path(@admin), method: :post, html: { class: "" } do |f| %>
      <%= render partial: "layouts/shared/success_messages", locals: { messages: flash[:notice] } %>
      <%= render partial: "layouts/shared/error_messages", locals: { messages: @admin.errors.full_messages } %>
      <%= render partial: "admins/shared/form", locals: {f: f, with_password: true} %>
      <div class="row">
        <div class="col-12 text-center">
          <%= submit_tag "Create Admin", class: "btn btn-submit" %>
        </div>
      </div>
    <% end %>
</div>
