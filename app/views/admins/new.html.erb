<%= form_for @admin, as: :admin, url: admins_path(@admin), method: :post, html: { class: "text-start" } do |f| %>
  <%= render partial: "layouts/shared/success_messages", locals: { messages: flash[:notice] } %>
  <%= render partial: "layouts/shared/error_messages", locals: { messages: @admin.errors.full_messages } %>
  <%= render partial: "admins/shared/form", locals: {f: f, id: "0", e: @admin, with_password: true} %>
  <%= submit_tag "Create Admin", class: "btn btn-submit w-100" %>
<% end %>
