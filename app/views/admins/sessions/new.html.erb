<div class="container content-wrapper">
    <div id="admin-login__wrapper" class="py-5">
        <div class="row justify-content-center text-center">
            <div class="col col-lg-12">
                <%= image_tag "logo.png", class: "img-fluid" %>
            </div>
        </div>
    </div>
    <div class="container py-5">
        <div class="row justify-content-center align-items-center">
            <div class="col col-sm-6 col-lg-4">
              <% if notice %>
                <p class="alert alert-success"><%= notice %></p>
              <% end %>
              <% if alert %>
                <p class="alert alert-danger"><%= alert %></p>
              <% end %>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login_form'} ) do |f| %>
                <div class="mb-1 text-start">
                </div>
                <div class="mb-3">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
                </div>

                <div class="mb-3">
                  <%= f.label :password %><br />
                  <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
                </div>

                <div class="actions">
                  <%= f.submit "Sign in", class: "btn btn-blue" %>
                </div>
              <% end %>
            </div>
        </div>
    </div>
</div>
