<main class="admin-login">
  <div id="admin-login__wrapper" class="container-fluid py-5" style="">
      <div class="row justify-content-center">
          <div class="col-sm-7 col-lg-5 text-center">
              <%= image_tag "white-logo.png", class: "img-fluid" %>
          </div>
      </div>
  </div>
  <div class="container py-5">
      <div class="row justify-content-center align-items-center">
          <div class="col col-sm-6 col-lg-4">
            <% if notice %>
              <p class="alert alert-success"><%= notice %></p>
            <% end %>
            <% if alert %>
              <p class="alert alert-danger"><%= alert %></p>
            <% end %>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login_form'} ) do |f| %>
              <div class="mb-1 text-start">
              </div>
              <div class="mb-3">
                <%= f.label :"Please login to continue" %><br />
                <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Username/Email"%>
              </div>

              <div class="mb-3">
                <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Password" %>
              </div>

              <div class="actions d-flex justify-content-between align-items-center">
                <%= link_to "Forgot your password?", admin_forgot_password_path, class:"forgot-password" %>
                <%= f.submit "Login", class: "btn btn-blue" %>
              </div>
            <% end %>
          </div>
      </div>
  </div>
  <footer class="colored_footer">
      <div class="container">
          <div class="row justify-content-center text-center py-2">
              <div class="col">
                  <h6>Â©2020 Quiplist Events Production Inc. All rights reserved</h6>
              </div>
          </div>
      </div>
  </footer>
</main>
